def draw_christmas_tree(height):
    for i in range(height):
        # 计算每行的空格数量和星星数量
        spaces = height - i - 1
        stars = 2 * i + 1
        
        # 打印空格
        print(' ' * spaces, end='')
        
        # 打印星星
        print('*' * stars)

# 设置树的高度
tree_height = 10
draw_christmas_tree(tree_height)
